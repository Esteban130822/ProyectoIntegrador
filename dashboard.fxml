<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="app.ui.DashboardController"
            stylesheets="@/css/styles.css">

    <top>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label fx:id="lblBienvenida" styleClass="title"/>
        </HBox>
    </top>

    <center>
        <TabPane>
            <tabs>
                <Tab fx:id="tabPlanes" text="Planes de Área">
                    <content>
                        <VBox spacing="10">
                            <padding>
                                <Insets top="10" right="10" bottom="10" left="10"/>
                            </padding>
                            <HBox spacing="10">
                                <TextField fx:id="txtBuscar" promptText="Buscar por título, nivel o grado"/>
                                <Button text="Nuevo" onAction="#onNuevoPlan"/>
                                <Button text="Editar" onAction="#onEditarPlan"/>
                                <Button text="Eliminar" onAction="#onEliminarPlan"/>
                                <Button fx:id="btnAprobarPlan" text="Aprobar" onAction="#onAprobarPlan"/>
                            </HBox>
                            <TableView fx:id="tblPlanes">
                                <columns>
                                    <TableColumn fx:id="colTitulo" text="Título" prefWidth="220"/>
                                    <TableColumn fx:id="colNivel" text="Nivel" prefWidth="120"/>
                                    <TableColumn fx:id="colGrado" text="Grado" prefWidth="80"/>
                                    <TableColumn fx:id="colEstado" text="Estado" prefWidth="120"/>
                                </columns>
                            </TableView>
                        </VBox>
                    </content>
                </Tab>

                <Tab fx:id="tabUsuarios" text="Usuarios" disable="true">
                    <content>
                        <VBox spacing="10">
                            <padding>
                                <Insets top="10" right="10" bottom="10" left="10"/>
                            </padding>
                            <Label text="(Módulo de administración de usuarios - pendiente de ampliar)"/>
                        </VBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>
