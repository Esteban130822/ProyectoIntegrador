<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="app.ui.PlanController"
      stylesheets="@/css/styles.css">

    <padding>
        <Insets top="12" right="12" bottom="12" left="12"/>
    </padding>

    <Label text="Plan de Área - Religión" styleClass="title"/>

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints percentWidth="20"/>
            <ColumnConstraints percentWidth="80"/>
        </columnConstraints>

        <!-- Eliminé la línea <RowConstraints/> porque estaba suelta -->

        <Label text="Título:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtTitulo" GridPane.rowIndex="0" GridPane.columnIndex="1"
                   promptText="Ej. Plan anual de Religión"/>

        <Label text="Nivel:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="cmbNivel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Grado:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <ComboBox fx:id="cmbGrado" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Contenidos:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextArea fx:id="txtContenidos" GridPane.rowIndex="3" GridPane.columnIndex="1"
                  prefRowCount="6" promptText="Temas, ejes, unidades..."/>

        <Label text="Competencias:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextArea fx:id="txtCompetencias" GridPane.rowIndex="4" GridPane.columnIndex="1"
                  prefRowCount="6" promptText="Competencias, objetivos, desempeños..."/>

        <Label text="Estado:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <ComboBox fx:id="cmbEstado" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    </GridPane>

    <Label fx:id="lblMsg" styleClass="info"/>

    <HBox spacing="10">
        <Button text="Guardar" onAction="#onGuardar"/>
    </HBox>
</VBox>
